{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0.3",
  "permissions": ["storage"],
  "options_page": "options.html",
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.nicovideo.jp/*"],
      "js": [
        "00-debug.js", "01-config.js", "02-logger.js",
        "10-observer.js",
        "30-main.js"
      ]
    }
  ],
  "default_locale": "en"
}
