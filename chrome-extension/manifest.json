{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0.6",
  "permissions": ["storage"],
  "options_page": "src/popup/options.html",
  "action": {
    "default_popup": "src/popup/options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.nicovideo.jp/*"],
      "js": [
        "src/config/debug.js",
        "src/config/config.js",
        "src/config/storage.js",

        "src/util/logger.js",

        "src/observer/button.js",
        "src/observer/container.js",
        "src/observer/page.js",

        "src/main.js"
      ]
    }
  ],
  "default_locale": "en"
}
